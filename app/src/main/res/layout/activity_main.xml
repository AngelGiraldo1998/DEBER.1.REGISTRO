<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFF5F8F8"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/id_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="123dp"
        android:text="Cedula"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        android:text="Nombre"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/id_borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="242dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="6dp"
        android:onClick="btEnviar"
        android:text="LIMPIAR" />

    <TextView
        android:id="@+id/id_correo"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_correo"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="352dp"
        android:text="Correo Electronico:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_nombreres"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="29dp"
        android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="Ingrese datos"
        android:inputType="text"
        android:maxLength="500" />

    <Button
        android:id="@+id/extemviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="8dp"
        android:onClick="btEnviar"
        android:text="ENVIAR" />

    <EditText
        android:id="@+id/id_cedulares"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:hint="Ingrese datos"
        android:inputType="phone"
        android:maxLength="10"
        android:onClick="btEnviar" />

    <TextView
        android:id="@+id/ID_REGISTRO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="11dp"
        android:background="#0CD8EC"
        android:text="REGISTRO"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="176dp"
        android:text="Ciudad:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_ciudadres"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="28dp"
        android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="Ingresar Datos"
        android:inputType="text"
        android:maxLength="200"
        android:onClick="btEnviar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="411dp"
        android:text="Celular"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_celularesres"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="401dp"
        android:ems="10"
        android:hint="Ingrese Datos"
        android:inputType="text"
        android:onClick="btEnviar" />

    <EditText
        android:id="@+id/id_celectronicores"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="354dp"
        android:ems="10"
        android:hint="Ingresar Datos"
        android:inputType="text"
        android:onClick="btEnviar" />

    <TextView
        android:id="@+id/id_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="290dp"
        android:text="Sexo:"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="256dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="245dp">

        <RadioButton
            android:id="@+id/id_generos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hombre" />

        <RadioButton
            android:id="@+id/id_sexom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mujer" />
    </RadioGroup>

    <TextView
        android:id="@+id/id_calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="149dp"
        android:text="Calendario:"
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/id_calendariores"
        android:layout_width="267dp"
        android:layout_height="177dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="63dp" />

</RelativeLayout>

